  "scripts": {
    "test-dev": "APP_NAME=luma_checkout NODE_ENV=dev TEST_BASE=luma_checkout playwright test",
    "test-uat": "APP_NAME=luma_checkout NODE_ENV=uat TEST_BASE=luma_checkout playwright test",
    "test-live": "APP_NAME=luma_checkout NODE_ENV=live playwright test",
    "test:debug": "APP_NAME=luma_checkout NODE_ENV=dev PWDEBUG=1 playwright test",
    "report": "npx playwright show-report reports/playwright-report",
    "allure": "npx allure generate reports/allure/allure-result -o reports/allure/allure-report --clean && npx allure open reports/allure/allure-report"
  }
}
